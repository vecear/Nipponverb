rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 預設管理員（確保至少有一個管理員）
    function isDefaultAdmin() {
      return request.auth != null &&
             request.auth.token.email == 'vecear@gmail.com';
    }

    // 從 config/admins 檢查是否為動態管理員
    function isDynamicAdmin() {
      let adminsDoc = /databases/$(database)/documents/config/admins;
      return request.auth != null &&
             exists(adminsDoc) &&
             request.auth.token.email in get(adminsDoc).data.emails;
    }

    // 管理員檢查
    function isAdmin() {
      return isDefaultAdmin() || isDynamicAdmin();
    }

    // 確認是否為已登入使用者
    function isAuthenticated() {
      return request.auth != null;
    }

    // 確認是否為資料擁有者
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User profiles - users can read/write their own profile, admin can read all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    // 遊戲配置 - 所有登入使用者可讀，只有管理員可寫
    match /config/{configId} {
      // admins 配置需要特殊處理
      allow read: if isAuthenticated();
      // 只有管理員可以修改配置
      allow write: if isAdmin();
    }

    // Drill questions - authenticated users can read, admin can write
    match /drills/{category}/{level}/{questionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Exams - authenticated users can read, admin can write
    match /exams/{examId}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Stages - authenticated users can read, admin can write
    match /stages/{stageId}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // 動詞資料（公開讀取）
    match /verbs/{verbId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 文法資料（公開讀取）
    match /grammar/{grammarId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 角色故事資料（登入使用者可讀，管理員可寫）
    match /characterStories/{storyId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
