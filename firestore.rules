rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 管理員列表
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email in ['vecear@gmail.com'];
    }

    // 確認是否為已登入使用者
    function isAuthenticated() {
      return request.auth != null;
    }

    // 確認是否為資料擁有者
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // User profiles - users can read/write their own profile, admin can read all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
    }

    // 遊戲配置 - 所有登入使用者可讀，只有管理員可寫
    match /config/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Drill questions - authenticated users can read, admin can write
    match /drills/{category}/{level}/{questionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Exams - authenticated users can read, admin can write
    match /exams/{examId}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Stages - authenticated users can read, admin can write
    match /stages/{stageId}/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // 動詞資料（公開讀取）
    match /verbs/{verbId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 文法資料（公開讀取）
    match /grammar/{grammarId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
